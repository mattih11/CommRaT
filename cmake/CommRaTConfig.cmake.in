@PACKAGE_INIT@

# CommRaT Package Config File
# This file helps downstream projects find and use CommRaT

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(SeRTial REQUIRED)
find_dependency(Threads REQUIRED)

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/CommRaTTargets.cmake")

# Provide CommRaT::commrat target
check_required_components(CommRaT)

# Set convenience variables
set(CommRaT_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@")
set(CommRaT_LIBRARIES CommRaT::commrat)
